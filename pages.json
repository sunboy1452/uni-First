{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^cl-(.*)": "@/components/cl/cl-$1/index.vue", //通用组件
			"^fui-(.*)": "@/components/firstui/fui-$1/fui-$1.vue"
		}
	},
	"pages": [{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		}, {
			"path": "pages/my/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/demo/list",
			"style": {
				"navigationBarTitleText": "示例"
			}
		}, {
			"path": "pages/demo/cl-bottom-area",
			"style": {
				"navigationBarTitleText": "cl-bottom-area"
			}
		}, {
			"path": "pages/demo/cl-icon",
			"style": {
				"navigationBarTitleText": "cl-icon"
			}
		}, {
			"path": "pages/demo/page",
			"style": {
				"navigationBarTitleText": "刷新加载",
				"enablePullDownRefresh": true
			}
		}
	],
	"subPackages": [{
		"root": "pages/my-sub",
		"pages": [{
			"path": "login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		}]
	}],

	"globalStyle": {
		"navigationBarTitleText": "小程序",
		"backgroundTextStyle": "light",
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#20579C",
		"backgroundColor": "#20579C",
		"backgroundColorTop": "#20579C",
		"backgroundColorBottom": "#20579C",
		"rpxCalcMaxDeviceWidth": 960,
		"rpxCalcBaseDeviceWidth": 375,
		"rpxCalcIncludeWidth": 750
	},

	"tabBar": {
		"color": "#333333",
		"selectedColor": "#20579C",
		"borderStyle": "white",
		"backgroundColor": "#ffffff",
		"height": "60px",
		"fontSize": "14px",
		"iconWidth": "30px",

		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/tabBar/1.png",
				"selectedIconPath": "static/tabBar/11.png",
				"text": "首页"
			}, {
				"pagePath": "pages/my/index",
				"iconPath": "static/tabBar/4.png",
				"selectedIconPath": "static/tabBar/44.png",
				"text": "我的"
			}

			, {
				"pagePath": "pages/demo/list",
				"iconPath": "static/tabBar/4.png",
				"selectedIconPath": "static/tabBar/44.png",
				"text": "示例"
			}
		]
	}

}